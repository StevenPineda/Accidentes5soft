@page
@model AccidenteTransito.App.Frontend.Pages.VehiculoModel
@{
    ViewData["Title"] = "Vehículos";
}

<body>
    <div class="container center-block">
        <div class="row justify-content-center">
            <div class="row">
                <div class="text-center">
                    <h3 class="display-4">TransitApp</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card-body">
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="ABC123" aria-label="Search">
                            <button type="submit" class="btn btn-outline-success"
                                style="background-color: #19284C; color: white">
                                <i class="fas fa-search fa-lg"></i>
                            </button>
                        </form>
                    </div>
                </nav>
                <br>
                <h5 class="card-title">Vehículo</h5>
                <h6 class="card-subtitle mb-2 text-muted">En este panel podrás gestionar los datos de los
                    Vehículos registrados en el sistema.</h6>
                <div>
                    <form method="POST">
                        <div class="form-group">
                            <label>Tipo de Vehículo</label>
                            <select asp-for="Vehiculo.TipoVehiculo" class="form-control form-control-sm">
                                <option value=0>Sedam</option>
                                <option value=1>Cupet</option>
                                <option value=2>Campero</option>
                                <option value=3>Furgoneta</option>
                                <option value=4>Bus</option>
                                <option value=5>Camion</option>
                                <option value=6>TractoCamion</option>
                                <option value=7>otocicleta</option>
                                <option value=8>Monopatin</option>
                                <option value=9>Bicicleta</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tipo de Servicio</label>
                            <select asp-for="Vehiculo.TipoServicio" class="form-control form-control-sm">
                                <option>Privado</option>
                                <option>Público</option>
                                <option>Gubernamental</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Placa</label>
                            <input asp-for="Vehiculo.Placa" class="form-control" placeholder="ABC 214">
                        </div>
                        <div class="mb-3">
                            <label>Marca</label>
                            <input asp-for="Vehiculo.Marca" class="form-control" placeholder="Audi">
                        </div>
                        <div class="mb-3">
                            <label>Modelo</label>
                            <input asp-for="Vehiculo.Modelo" class="form-control" placeholder="Q7">
                        </div>
                        <div class="mb-3">
                            <label>Color</label>
                            <input asp-for="Vehiculo.Color" class="form-control" placeholder="Navy">
                        </div>
                        <div class="mb-3">
                            <label>Año</label>
                            <input asp-for="Vehiculo.Anio" type="number" class="form-control" placeholder="2022">
                        </div>
                        <div class="mb-3">
                            <label>SOAT</label>
                            <input asp-for="Vehiculo.Soat" class="form-control" placeholder="SI / NO">
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus-square fa-lg" aria-hidden="true"></i>
                            Registrar Vehículo</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2 class="card-title"> </h2>
            <h5 class="card-title justify-content-center">Vehículos Registrados</h5>
            <div class="table-responsive">
                @if (Model.Vehiculos.Count() > 0)
                {
                <table id="tblVehiculos" class="table table-striped table-bordered" style="width: 100%;">
                    <thead class="thead" style="background-color: #19284C; color: white">
                        <tr>
                            <!--<th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Id)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().TipoVehiculo)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().TipoServicio)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Placa)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Marca)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Modelo)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Color)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Anio)</th>
                            <th>Html.DisplayNameFor(m => m.Vehiculos.FirstOrDefault().Soat)</th>
                            <th></th>-->
                            <th>Id</th>
                            <th>TipoVehiculo</th>
                            <th>TipoServicio</th>
                            <th>Placa</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Color</th>
                            <th>Anio</th>
                            <th>Soat</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehiculo in Model.Vehiculos)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => vehiculo.Id)</td>
                            <td>@Html.DisplayFor(m => vehiculo.TipoVehiculo)</td>
                            <td>@Html.DisplayFor(m => vehiculo.TipoServicio)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Placa)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Marca)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Modelo)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Color)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Anio)</td>
                            <td>@Html.DisplayFor(m => vehiculo.Soat)</td>
                            <!--<td>@vehiculo.Id</td>
                            <td>@vehiculo.TipoVehiculo</td>
                            <td>@vehiculo.TipoServicio</td>
                            <td>@vehiculo.Placa</td>
                            <td>@vehiculo.Marca</td>
                            <td>@vehiculo.Modelo</td>
                            <td>@vehiculo.Color</td>
                            <td>@vehiculo.Anio</td>
                            <td>@vehiculo.Soat</td>-->
                            <td>
                                <a class="btn btn-info" asp-page="../Vehiculos/DetalleVehiculo" asp-route-vehiculoId="@vehiculo.Id">
                                    <i class="fas fa-info-circle fa-lg"></i>
                                    Detalle</a>
                                <a class="btn btn-warning" asp-page="../Vehiculos/EditarVehiculo" asp-route-vehiculoId="@vehiculo.Id"
                                    style="background-color: #FFA500; color: white">
                                    <i class="fas fa-edit fa-lg" aria-hidden="true"></i>
                                    Editar</a>
                                <a class="btn btn-danger" asp-page="../Vehiculos/BorrarVehiculo" asp-route-id="vehiculo.Id"
                                    style="background-color: #FF0000; color: white">
                                    <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
                                    Eliminar</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <p>No hay Vehículos registrados.</p>
                }
            </div>
            <br>
        </div>
    </div>
</body>