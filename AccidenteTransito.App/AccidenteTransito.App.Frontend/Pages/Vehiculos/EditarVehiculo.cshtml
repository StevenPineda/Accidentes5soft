    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title">Vehículo</h5>
                <h6 class="card-subtitle mb-2 text-muted">En este panel podrás editar los datos del
                    Vehículo seleccionado.</h6>
                <div>
                    <form method="POST">

                        <input type="hidden" asp-for="@Model.Vehiculo.Id"/>

                        <div class="form-group">
                            <label>Tipo de Vehículo</label>
                            <!-- Manera automatica, solo que no trae Id
                            <div class="editor-field">
                            @Html.DropDownListFor(model => model.TipoVehiculo, 
                            new SelectList(Enum.GetValues(typeof(TipoVehiculo))))</div>-->

                            <select asp-for="Vehiculo.TipoVehiculo" class="form-control form-control-sm">
                                <option value=0>Sedam</option>
                                <option value=1>Cupet</option>
                                <option value=2>Campero</option>
                                <option value=3>Furgoneta</option>
                                <option value=4>Bus</option>
                                <option value=5>Camion</option>
                                <option value=6>TractoCamion</option>
                                <option value=7>otocicleta</option>
                                <option value=8>Monopatin</option>
                                <option value=9>Bicicleta</option>
                                <!--<option>Automóvil</option>
                                <option>Motocicleta</option>
                                <option>Autobús</option>
                                <option>Bicicleta</option>
                                <option>Camión</option>
                                <option>Scooter</option>
                                <option>Patineta</option>
                                <option>Patines</option>
                                <option>Motocarro</option>
                                <option>Cuatrimoto</option>
                                <option>Tractocamión</option>
                                <option>Remolque</option>
                                <option>Tracción Animal</option>
                                <option>Otro</option>-->
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tipo de Servicio</label>
                            <select asp-for="Vehiculo.TipoServicio" class="form-control form-control-sm">
                                <option>Privado</option>
                                <option>Público</option>
                                <option>Gubernamental</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Placa</label>
                            <input asp-for="Vehiculo.Placa" class="form-control" placeholder="ABC 214">
                        </div>
                        <div class="mb-3">
                            <label>Marca</label>
                            <input asp-for="Vehiculo.Marca" class="form-control" placeholder="Audi">
                        </div>
                        <div class="mb-3">
                            <label>Modelo</label>
                            <input asp-for="Vehiculo.Modelo" class="form-control" placeholder="Q7">
                        </div>
                        <div class="mb-3">
                            <label>Color</label>
                            <input asp-for="Vehiculo.Color" class="form-control" placeholder="Navy">
                        </div>
                        <div class="mb-3">
                            <label>Año</label>
                            <input asp-for="Vehiculo.Anio" type="number" class="form-control" placeholder="2022">
                        </div>
                        <div class="mb-3">
                            <label>SOAT</label>
                            <input asp-for="Vehiculo.Soat" class="form-control" placeholder="SI / NO">
                        </div>
                        <button type="submit" class="btn btn-warning" style="background-color: #FFA500; color: white">
                            <i class="fas fa-edit fa-lg" aria-hidden="true"></i>
                            Editar Vehículo</button>
                        <a asp-page="Vehiculo" class="btn btn-success"
                            style="background-color: #19284C; color: white">Volver</a>
                    </form>
                </div>
            </div>
        </div>

